<Section class="container forms">
    <div class="form login">
      <div class="form content">
        <form class="login-form">
        <h6>Login</h6>
           <div class="field input-field">
              <input type="email" placeholder="Email" class="input" id="email-login">
           </div>
            <div class="field input-field">
              <input type="password" placeholder="Password" class="password" id="password-login">
           </div>
            <div class="field button-field">
              <button type="submit">Login</button>
           </div>
        </form>
    </div>
    {{!-- sign up form --}}
    <div class="form signup">
      <div class="form content">
        <form class="signup-form">
        <h6>Sign up</h6>
           <div class="field input-field">
              <input type="name" placeholder="Name" class="input" id="username-signup">
           </div>
           <div class="field input-field">
              <input type="email" placeholder="Email" class="input" id="email-signup">
           </div>
            <div class="field input-field">
              <input type="password" placeholder="Password" class="password" id="password-signup">
           </div>
            <div class="field button-field">
              <button type="submit">Sign up</button>
           </div>
        </form>
    </div>
  </Section>

