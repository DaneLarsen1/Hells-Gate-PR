<div class="progress-page-container">
    <div class="left-content">
        <!-- Overview Section -->
        <div class="overview-section">
            <h2>Your Progress Overview</h2>
            <!-- Overview content here -->
        </div>

       <div class="goals-section">
  <h2>Current Goals</h2>
  {{#each goals}}
    <div class="goal">
      <p>{{this.description}}</p>
      <div class="progress">
        <div class="progress-bar" style="width: {{this.percentage}}%;"></div>
      </div>
    </div>
  {{/each}}
</div>
    </div>

    <div class="charts-section">
        <!-- Strength Chart Container -->
        <div class="chart-container">
            <h3>Strength Progress</h3>
            <canvas id="strength-chart"></canvas>
        </div>

        <!-- Endurance Chart Container -->
        <div class="chart-container">
            <h3>Endurance Progress</h3>
            <canvas id="endurance-chart"></canvas>
        </div>
    </div>
</div>
<script src="/js/chart.js"></script>